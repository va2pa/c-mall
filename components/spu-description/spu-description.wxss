/* components/spu-description/index.wxss */

.container{
  width:100%;
  box-sizing: border-box;
  background-color: #fff;
  padding: 34rpx 30rpx 26rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.left{
  flex: 1;
  display: flex;
  flex-direction: column;
}

.subtitle{
  color: #999;
  font-size: 28rpx;
  font-weight: 400;
  margin-top: 40rpx;
  margin-bottom: 16rpx;
}
.price-row{
  display: flex;
  align-items: baseline;
}

.discount-price{
  margin: 0 80rpx 0 20rpx;
}
.l-price-unit{
  margin-right: 14rpx !important;
}
.right{
  margin-top: 10rpx;
  margin-right: 35rpx;
  display: flex;
  flex-direction: row; 
  justify-content: flex-end;

}


