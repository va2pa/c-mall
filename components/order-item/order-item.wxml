<view class="container l-class">
    <image mode="aspectFit" src="{{orderItem.sku.img}}" class="left"></image>
    <view class="middle">
        <text class="title hidden-text ">{{orderItem.sku.title}}</text>
        <view class="specs-container">
            <view wx:if="{{specValuesText}}" class="specs">
                <text>{{specValuesText}}</text>
            </view>
        </view>
    </view>
    <view class="right">
        <l-price value="{{orderItem.sku.finalPrice || orderItem.sku.final_price}}"
                 color="#333333">
        </l-price>
        <text>x {{orderItem.sku.count}}</text>
    </view>
</view>