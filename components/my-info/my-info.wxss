.container{
  background-color: #F0F8FF;
  height: 390rpx;
  width: 100%;
  display:flex;
  flex-direction:row;
  align-items:center;
  justify-content:center;
}
.inner-container{
  position: relative;
  box-sizing: border-box;
  width: 690rpx;
  height: 150rpx;
  background-color: #ffffff;
  padding-left:38rpx;
  padding-right:38rpx;
  box-shadow:0px 0px 8px 0px rgba(119,163,149,0.2);
  border-radius: 4rpx;
}


.avatar-container{
  position: relative;
  top:-18rpx;
}

.avatar{
  border-radius: 4rpx;
}

.auth-btn{
  position: absolute;
  top:28rpx;
  right: 0;
  border-top-left-radius: 60rpx;
  border-bottom-left-radius: 60rpx;
  font-size:24rpx;
  color: #157658;
}
