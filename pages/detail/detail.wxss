/* pages/detail/detail.wxss */
.top{
  width: 100%;
  height: 550rpx;
}
.tabbar{
  position: fixed;
  bottom: 0;
}
.sku-pending{
  box-sizing: border-box;
  display: flex;
  width: 100%;
  height: 80rpx;
  background-color: #ffffff;
  flex-direction: row;
  margin: 10rpx 0;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
  padding: 0 30rpx;
}

.coupon-container{
  background-color: #ffffff;
  display:flex;
  flex-direction:row;
  width: 100%;
  height: 88rpx;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.coupon-left {
  display: flex;
  flex-direction: row;
  /*margin-left:30rpx;*/
}

.coupon-left > s-coupon-mini:first-child{
  margin-right: 20rpx;
}

.coupon-right{
  display:flex;
  flex-direction:row;
  align-items: center;
}

.coupon-right > text{
  font-size:24rpx;
  color: #333333;
  margin-right:20rpx ;
  margin-top:-4rpx;
}

.specs > text:first-child{
  color:#999;
  font-size: 24rpx;
}
.specs > text:nth-child(2){
  color:#333333;
  font-size: 24rpx;
} 
.explain{
  margin-top: 10rpx;
  background-color: #fff;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.detail-img{
  display: flex;
  width: 100%;
}
